        //     alert("mahfuz");
        // });

        function fnSum() {
            var x = parseInt($("#txtval1").val());
            var y = parseInt($("#txtval2").val());
            var z = x + y;

            $("#divResult").html(z);
            alert(z);
        }
    </script>
}
